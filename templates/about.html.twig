	a{
		color:#1b6d85;
	}

</style>

	<header>
		<div style="background-color:#D0FAFB ;width: 100%;height:1000px;position: relative">
			<img src="{{asset('images/about.png')}}" width="50%" height="600px" alt="about UNISET" style="margin-left:25%;margin-top:200px;opacity: 0.8" class="shadow-lg p-3 mb-5 rounded"/>
		</div>


		

	</header>
	<h1 style="text-align:center; font-weight:bold; margin-top:50px">Contactez Nous</h1>
	{% form_theme form 'bootstrap_4_layout.html.twig' %}

	<div id="fh5co-contact">
		<div class="container">
			<div class="row">
				<div class="col-md-5 col-md-push-1 animate-box">
					
					<div class="fh5co-contact-info">
						<h3>Contact Information</h3>
						<ul>
							<li class="address">47, Rue des Entrepreneurs Charguia II <br>2035- Tunis Carthage (Tunisie)</li>
							<li class="phone"><a href="tel://1234567920">+216 11111111</a></li>
							<li class="email"><a href="mailto:karkaradsi21@gmail.com">karkaradsi21@gmail.com</a></li>
						</ul>
					</div>

				</div>

				<div class="col-md-6 animate-box">
					<h3>Get In Touch</h3>
					{{ form_start(form) }}

						<div class="row form-group">
							<div class="col-md-6" >
								<!-- <label for="fname">First Name</label> -->
								{{ form_widget(form.prenom) }}
							</div>
							<div class="col-md-6" >
								<!-- <label for="lname">Last Name</label> -->
								{{ form_widget(form.nom) }}
							</div>
						</div>

						<div class="row form-group">
							<div class="col-md-12">
								<!-- <label for="email">Email</label> -->
								{{ form_widget(form.email) }}
							</div>
						</div>

						<div class="row form-group">
							<div class="col-md-12">
								<!-- <label for="subject">Subject</label> -->
								{{ form_widget(form.sujet) }}
							</div>
						</div>

						<div class="row form-group">
							<div class="col-md-12" >
								<!-- <label for="message">Message</label> -->

							{{ form_widget(form.contenu) }}
							</div>
						</div>
						<div class="form-group">
							<button type="submit" class="btn btn-primary ">Send Message</button>
						</div>

					{{ form_end(form) }}
				</div>
			</div>

		</div>
	</div>



